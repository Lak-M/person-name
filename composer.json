{
    "name": "lakm/person-name",
    "description": "Format personal names in various styles-full, abbreviated, or familiar based on country specific conventions",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lakm\\PersonName\\": "src/",
            "Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Lakshan Madushanka",
            "email": "epmadushanka@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "pestphp/pest": "^3.8",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": ["./vendor/bin/pest"],
        "rector": ["./vendor/bin/rector"],
        "phpstan": ["./vendor/bin/phpstan analyse"],
        "pint": ["./vendor/bin/pint"]
    }
}
